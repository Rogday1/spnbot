# Telegram Bot токен (обязательно)
BOT_TOKEN=your_bot_token_here

# URL для доступа к WebApp (обязательно)
WEBAPP_PUBLIC_URL=https://ваш-домен-или-ip

# Настройки вебхука для Telegram (опционально, если используете webhook вместо long polling)
WEBHOOK_HOST=https://ваш-домен-или-ip
WEBHOOK_PATH=/webhook/bot/

# Настройки веб-приложения (обязательно)
WEBAPP_HOST=0.0.0.0  # Слушать на всех интерфейсах
WEBAPP_PORT=8000     # Порт для веб-приложения

# Настройки базы данных (обязательно)
# Для SQLite (проще, но менее производительно)
DATABASE_URL=sqlite:///./data/spin_bot.db
# Для PostgreSQL (рекомендуется для продакшена)
# DATABASE_URL=postgresql://username:password@localhost/db_name

# Настройки безопасности (рекомендуется)
SECRET_KEY=сгенерируйте-случайную-строку  # Используйте что-то вроде secrets.token_hex(32)

# Настройки игры (опционально)
FREE_SPIN_INTERVAL=86400  # Интервал между бесплатными прокрутками в секундах (24 часа)
INITIAL_TICKETS=1         # Количество начальных билетов для новых пользователей

# Обязательные каналы для подписки (опционально)
# Формат: список каналов через запятую (можно использовать @username, username или t.me/username)
REQUIRED_CHANNELS=@channel1,@channel2

# Другие настройки (рекомендуется для продакшена)
DEBUG=False             # Отключите отладку на продакшене
LOG_LEVEL=WARNING       # Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FILE=/path/to/logs/spin_bot.log  # Путь к файлу логов (опционально)