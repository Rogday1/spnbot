# Основные настройки
DEBUG=True  # Установите False для продакшена

# Настройки бота
BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ  # Токен от BotFather

# Настройки вебхука
WEBHOOK_HOST=https://yourdomain.com  # Домен для вебхука
WEBHOOK_PATH=/webhook/bot/  # Путь для вебхука

# Настройки веб-приложения
WEBAPP_HOST=0.0.0.0  # Хост для веб-сервера
WEBAPP_PORT=8000  # Порт для веб-сервера
WEBAPP_PUBLIC_URL=https://yourdomain.com  # Публичный URL для WebApp

# Настройки базы данных
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/spin_bot

# Настройки безопасности
SECRET_KEY=your_secret_key_here  # Секретный ключ для подписи токенов и шифрования

# Настройки логирования
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/path/to/your/log/file.log  # Оставьте пустым для вывода в консоль

# Настройки игры
FREE_SPIN_INTERVAL=86400  # Интервал между бесплатными прокрутками в секундах (86400 = 24 часа)
INITIAL_TICKETS=1  # Начальное количество билетов для новых пользователей
MAX_WIN_PER_DAY=5000  # Максимальный выигрыш за день для всех пользователей

# Обязательные каналы для подписки (через запятую)
REQUIRED_CHANNELS=@channel1,@channel2  # Оставьте пустым, если подписка не требуется 